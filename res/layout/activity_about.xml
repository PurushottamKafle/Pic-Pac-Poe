<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.picpacpoe.AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/im_about"
            android:background="@drawable/profile"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_about"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="80dp"

            android:text="@string/about_app2"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/textView3" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pk23"
            android:background="@drawable/pklogo"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="90dp"    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/pk23"
            android:layout_marginTop="27dp"
            android:text="Production"
            android:textColor="#202ec1" />

        <include layout="@layout/toolbar" android:id="@+id/tb2" />

    </RelativeLayout>

</ScrollView>
